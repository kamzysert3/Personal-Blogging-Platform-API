<div class="blog-post <%= postInPage.includes(post) ? 'show' : 'hidden' %>" tag="<%= tag %>">
    <img src="<%= image %>" alt="Blog Post Image">
    <h2 class="mt-3 blog-title"><%= title %></h2>
    <p class="text-muted">Posted on <%= date %> by <a href="#" class="blog-author"><%= author %></a></p>
    <p class="blog-content"><%= content %></p>
    <a href="/posts?id=<%= id%>" id="read" class="btn btn-primary">Read More</a>
</div>